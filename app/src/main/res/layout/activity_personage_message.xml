<?xml version="1.0" encoding="utf-8"?>
<com.lyp.percent.PercentRelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    >
  
   <com.lyp.percent.PercentRelativeLayout 
	     android:id="@+id/percente_message"
	     android:layout_width="0dp"
	     android:layout_height="0dp"
	     app:layout_heightPercent="10%"
		 app:layout_widthPercent="100%"
		 android:background="@color/bg_title"
     	>	 
     <ImageView 
         android:id="@+id/iv_message_back"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/returns"
         android:layout_centerVertical="true"
         android:clickable="true"
         />
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="个人信息"
		    android:textColor="@color/white"
		    android:gravity="center"
		    android:textSize="20sp"
		    android:layout_centerVertical="true"
		    android:layout_centerHorizontal="true"
		    />
   </com.lyp.percent.PercentRelativeLayout>  
   <com.lyp.percent.PercentRelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/percente_message"
	    >
	  <RelativeLayout 
		    android:id="@+id/rl_message_account_number"
		    android:layout_width="0dp"
		    android:layout_height="0dp"
		    app:layout_heightPercent="10%"
		    app:layout_widthPercent="100%"
		    app:layout_marginLeftPercent="5%"
		    app:layout_marginRightPercent="5%"
		    android:gravity="center"
	     >
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="账号"
	       />  
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="mfhb-hk_00"
	       android:layout_alignParentRight="true"
	       />     
	  </RelativeLayout>  
	 <View 
	     android:id="@+id/view_message_account_number"
	     android:layout_width="match_parent"
	     android:layout_height="0.1sp"
	     android:background="@color/view_hui"
	     android:layout_below="@id/rl_message_account_number"
	     />   
	 <RelativeLayout 
		    android:id="@+id/rl_message_name"
		    android:layout_width="0dp"
		    android:layout_height="0dp"
		    app:layout_heightPercent="10%"
		    app:layout_widthPercent="100%"
		    app:layout_marginLeftPercent="5%"
		    app:layout_marginRightPercent="5%"
		    android:gravity="center"
		    android:layout_below="@id/view_message_account_number"
	     >
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="姓名"
	       />  
	  <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="张三"
	       android:layout_alignParentRight="true"
	       />      
	  </RelativeLayout>  
	 <View 
	     android:id="@+id/view_message_name"
	     android:layout_width="match_parent"
	     android:layout_height="0.1sp"
	     android:background="@color/view_hui"
	     android:layout_below="@id/rl_message_name"
	     />
	 <RelativeLayout 
		    android:id="@+id/rl_message_outlet"
		    android:layout_width="0dp"
		    android:layout_height="0dp"
		    app:layout_heightPercent="10%"
		    app:layout_widthPercent="100%"
		    app:layout_marginLeftPercent="5%"
		    app:layout_marginRightPercent="5%"
		    android:gravity="center"
		    android:layout_below="@id/view_message_name"
	     >
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="所属门店"
	       />  
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="闸北门店"
	       android:layout_alignParentRight="true"
	       /> 
	  </RelativeLayout>  
	 <View 
	     android:id="@+id/view_message_outlet"
	     android:layout_width="match_parent"
	     android:layout_height="0.1sp"
	     android:background="@color/view_hui"
	     android:layout_below="@id/rl_message_outlet"
	     />
	 <RelativeLayout 
		    android:id="@+id/rl_message_position"
		    android:layout_width="0dp"
		    android:layout_height="0dp"
		    app:layout_heightPercent="10%"
		    app:layout_widthPercent="100%"
		    app:layout_marginLeftPercent="5%"
		    app:layout_marginRightPercent="5%"
		    android:gravity="center"
		    android:layout_below="@id/view_message_outlet"
	     >
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="职位"
	       />  
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="经理"
	       android:layout_alignParentRight="true"
	       />    
	  </RelativeLayout>  
	 <View 
	     android:id="@+id/view_message_position"
	     android:layout_width="match_parent"
	     android:layout_height="0.1sp"
	     android:background="@color/view_hui"
	     android:layout_below="@id/rl_message_position"
	     />
	  <RelativeLayout 
		    android:id="@+id/rl_message_pwodsetting"
		    android:layout_width="0dp"
		    android:layout_height="0dp"
		    app:layout_heightPercent="10%"
		    app:layout_widthPercent="100%"
		    app:layout_marginLeftPercent="5%"
		    app:layout_marginRightPercent="5%"
		    android:gravity="center"
		    android:layout_below="@id/view_message_position"
	     >
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="密码设置"
	       />  
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="未修改"
	       android:textColor="@color/view_hui"
	       android:layout_alignParentRight="true"
	       android:drawableRight="@drawable/enter_the"
	       />
	      
	  </RelativeLayout>  
	 <View 
	     android:id="@+id/view_message_pwodsetting"
	     android:layout_width="match_parent"
	     android:layout_height="0.1sp"
	     android:background="@color/view_hui"
	     android:layout_below="@id/rl_message_pwodsetting"
	     />  
	 <RelativeLayout 
	        android:id="@+id/rl_message_staffmanagement"
		    android:layout_width="0dp"
		    android:layout_height="0dp"
		    app:layout_heightPercent="10%"
		    app:layout_widthPercent="100%"
		    app:layout_marginLeftPercent="5%"
		    app:layout_marginRightPercent="5%"
		    android:gravity="center"
		    android:layout_below="@id/view_message_pwodsetting"
	     >
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="员工管理"
	       />  
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="需要验证"
	       android:textColor="@color/view_hui"
	       android:layout_alignParentRight="true"
	       android:drawableRight="@drawable/enter_the"
	       />
	      
	  </RelativeLayout>  
	 <View 
	     android:layout_width="match_parent"
	     android:layout_height="0.1sp"
	     android:background="@color/view_hui"
	     android:layout_below="@id/rl_message_staffmanagement"
	     />     
	</com.lyp.percent.PercentRelativeLayout> 
</com.lyp.percent.PercentRelativeLayout>    

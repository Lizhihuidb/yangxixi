<?xml version="1.0" encoding="utf-8"?>
<com.lyp.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_bg"
    >
 <com.lyp.percent.PercentRelativeLayout 
     android:id="@+id/percent_mission_dingdan"
     android:layout_width="0dp"
     android:layout_height="0dp"
     app:layout_heightPercent="8%"
     app:layout_widthPercent="100%"
     android:background="@color/bg_ly"
     >
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:text="当前共88条订单"
	    android:layout_gravity="center"
	    android:gravity="center"
	    android:textColor="@color/white"
	    />
</com.lyp.percent.PercentRelativeLayout>  
 <com.lyp.percent.PercentRelativeLayout 
     android:layout_width="0dp"
     android:layout_height="0dp"
     app:layout_heightPercent="15%"
     app:layout_widthPercent="100%"
     android:layout_below="@id/percent_mission_dingdan"
     app:layout_marginTopPercent="2%"
     app:layout_marginLeftPercent="2%"
     app:layout_marginRightPercent="2%"
     >
 <com.lyp.percent.PercentRelativeLayout 
     android:id="@+id/Rl_percenter_missionname"
     android:layout_width="0dp"
     android:layout_height="0dp"
     app:layout_heightPercent="100%"
     app:layout_widthPercent="50%"
     android:background="@color/white"
     >
	   
    </com.lyp.percent.PercentRelativeLayout>   
  <com.lyp.percent.PercentRelativeLayout 
     android:layout_width="0dp"
     android:layout_height="0dp"
     app:layout_heightPercent="100%"
     app:layout_widthPercent="50%"
     app:layout_marginLeftPercent="2%"
     android:layout_toRightOf="@id/Rl_percenter_missionname"
     android:background="@color/white"
     >
</com.lyp.percent.PercentRelativeLayout>
</com.lyp.percent.PercentRelativeLayout>
</com.lyp.percent.PercentRelativeLayout>
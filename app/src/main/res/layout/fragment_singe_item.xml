<?xml version="1.0" encoding="utf-8"?>
<com.lyp.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/bg"
	 >
 	 <com.lyp.percent.PercentRelativeLayout 
        android:id="@+id/percent_title"
	    android:layout_width="0dp"
	    android:layout_height="0dp"
	    app:layout_heightPercent="10%"
	    app:layout_widthPercent="100%" 
	    android:layout_centerHorizontal="true"
	    >
	 <RelativeLayout 
	     android:layout_width="match_parent"
	     android:layout_height="match_parent"
	     app:layout_marginLeftPercent="5%"
	     app:layout_marginRightPercent="5%"
	     >
	    <TextView 
	        android:id="@+id/tv_fuwuleixing"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="服务类型:"
	        android:gravity="center"
	        /> 
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="车内空气净化服务"
	        android:gravity="center"
	        android:layout_toRightOf="@+id/tv_fuwuleixing"
	        />     
	   <ImageView 
	       android:layout_width="wrap_content"
	       android:layout_height="match_parent"
	       android:src="@drawable/enter_the"
	       android:layout_alignParentRight="true"
	       />  
	   
	 </RelativeLayout>   
 	<View 
	       android:layout_width="0dp"
	       android:layout_height="0dp"
	       app:layout_heightPercent="2%"
	       app:layout_widthPercent="100%"
	       android:layout_alignParentBottom="true" 
	       android:background="@color/view_hui"
	       />  
   </com.lyp.percent.PercentRelativeLayout>
   	 <com.lyp.percent.PercentRelativeLayout
   	     android:id="@+id/percent_detauls" 
	    android:layout_width="0dp"
	    android:layout_height="0dp"
	    app:layout_heightPercent="20%"
	    app:layout_widthPercent="100%" 
	    android:layout_centerHorizontal="true"
	    android:layout_centerVertical="true"
	    android:layout_below="@+id/percent_title"
	    android:gravity="center"
	    >
	 <RelativeLayout 
	     android:id="@+id/rl_a"
	     app:layout_marginLeftPercent="5%"
	     android:layout_width="0dp"
	     android:layout_height="wrap_content"
	     app:layout_widthPercent="70%" 
	     >
	    <TextView 
	        android:id="@+id/tv_qiwangtime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="期望时间:"
	        android:gravity="center"
	        android:textColor="@color/view_hui"
	        /> 
	     <TextView 
	        android:id="@+id/tv_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="2017/4/19"
	        android:gravity="center"
	        android:textColor="@color/view_hui"
	        android:layout_toRightOf="@+id/tv_qiwangtime"
	        />  
	    <TextView 
	        android:id="@+id/kongbai"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="   "
	        android:gravity="center"
	        android:textColor="@color/view_hui"
	        android:layout_toRightOf="@+id/tv_time"
	        />   
	     
	     <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="13~15时"
	        android:gravity="center"
	        android:textColor="@color/view_hui"
	        android:layout_toRightOf="@+id/kongbai"
	        />   
	     
	 </RelativeLayout>   
 	 <RelativeLayout 
 	     android:id="@+id/rl_b"
	     android:layout_height="wrap_content"
	     app:layout_marginLeftPercent="5%"
	     app:layout_marginTopPercent="5%"
	     android:layout_below="@id/rl_a"
	     android:layout_width="0dp"
	     app:layout_widthPercent="70%" 
	     >
	    <TextView 
	        android:id="@+id/tv_chexing"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="车型:"
	        android:gravity="center"
	        android:textColor="@color/view_hui"
	        /> 
	     <TextView 
	        android:id="@+id/tv_chezi"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="SUV"
	        android:gravity="center"
	        android:textColor="@color/view_hui"
	        android:layout_toRightOf="@+id/tv_chexing"
	        />  
	    <TextView 
	        android:id="@+id/kongbai1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="           "
	        android:gravity="center"
	        android:textColor="@color/view_hui"
	        android:layout_toRightOf="@+id/tv_chezi"
	        />   
	     
	     <TextView 
	        android:id="@+id/chepai"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="车牌:"
	        android:gravity="center"
	        android:textColor="@color/view_hui"
	        android:layout_toRightOf="@+id/kongbai1"
	        />   
	     <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="沪AAAAA"
	        android:gravity="center"
	        android:textColor="@color/view_hui"
	        android:layout_toRightOf="@+id/chepai"
	        />   
	 </RelativeLayout>
	<RelativeLayout 
	     android:layout_height="wrap_content"
	     app:layout_marginLeftPercent="5%"
	     app:layout_marginTopPercent="5%"
	     android:layout_below="@id/rl_b"
	     android:layout_width="0dp"
	     app:layout_widthPercent="70%" 
	     >
	    <TextView 
	        android:id="@+id/tv_baojia"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="报价:"
	        android:gravity="center"
	        /> 
	     <TextView 
	        android:id="@+id/tv_chezi"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="2000元"
	        android:gravity="center"
	        android:textColor="@color/red"
	        android:layout_toRightOf="@+id/tv_baojia"
	        />  
	  
	 </RelativeLayout> 
 	 <RelativeLayout 
 	     android:layout_height="wrap_content"
 	     android:layout_alignParentRight="true"	 
 	     android:gravity="center"
 	     android:layout_width="0dp"
	     app:layout_widthPercent="25%" 
	     app:layout_marginRightPercent="5%"
	     app:layout_heightPercent="40%"
	     android:layout_centerHorizontal="true"
	     app:layout_marginTopPercent="10%"
 	     >
 	  <Button 
 	      android:layout_width="match_parent"
 	      android:layout_height="match_parent"
 	      android:text="接单"
 	      android:background="@color/bg_title"
 	      android:textColor="@color/white"
 	      />   
 	     
 	 </RelativeLayout>
   </com.lyp.percent.PercentRelativeLayout>
    
</com.lyp.percent.PercentRelativeLayout>
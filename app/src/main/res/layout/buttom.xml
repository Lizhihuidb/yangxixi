<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_mian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
    </android.support.v4.view.ViewPager>
    <view
        android:layout_width="match_parent"
        android:layout_height="0.2sp" />
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        >
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/jl_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/h_home_page"
                android:gravity="center"
                android:text="首页"
                android:textColor="#696969"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/jl_singe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/h_grab_a_single"
                android:gravity="center"
                android:text="抢单"
                android:textColor="#696969"
                android:textSize="20sp" />



            <RadioButton
                android:id="@+id/jl_task"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/h_task"
                android:gravity="center"
                android:text="任务"
                android:textColor="#696969"
                android:textSize="20sp" />
            <RadioButton
                android:id="@+id/jl_report"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/h_the_report"
                android:gravity="center"
                android:text="报告"
                android:textColor="#696969"
                android:textSize="20sp" />
            <RadioButton
                android:id="@+id/jl_my"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/h_my"
                android:gravity="center"
                android:text="我的"
                android:textColor="#696969"
                android:textSize="20sp" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>

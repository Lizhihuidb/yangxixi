<?xml version="1.0" encoding="utf-8"?>
<com.lyp.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id="@+id/bbnbn"
	 >	
 <com.lyp.percent.PercentRelativeLayout 
     android:id="@+id/percent_missiontitle"
     android:layout_width="0dp"
     android:layout_height="0dp"
     app:layout_heightPercent="10%"
	 app:layout_widthPercent="100%"
     >	 
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
		android:background="@color/bg_title"
		android:layout_centerHorizontal="true"
		android:gravity="center"
    	 >
		<TextView
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:text="门店任务"
		    android:textColor="@color/white"
		    android:gravity="center"
		    android:textSize="20sp"
		    />
		<ImageView 
		    android:id="@+id/iv_missiontask"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:src="@drawable/my_task"
		    android:layout_alignParentRight="true"
		    />
    </RelativeLayout>  
   </com.lyp.percent.PercentRelativeLayout> 
   <com.lyp.percent.PercentRelativeLayout 
	     android:id="@+id/percent_missionbutton"
	     android:layout_width="0dp"
	     android:layout_height="0dp"
	     app:layout_heightPercent="10%"
		 app:layout_widthPercent="100%"
		 android:layout_below="@id/percent_missiontitle"
     >	 
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
		android:background="@color/bg_title"
		android:orientation="horizontal"
		android:gravity="center"
    	 >
	<RelativeLayout 
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:gravity="center"
	    >
		
		<TextView
		    android:id="@+id/tv_allmission"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="所有任务"
		    android:textColor="@color/white"
		    android:textSize="14sp"
		    android:gravity="center"
		    android:background="@drawable/shape_title"
		    />
	</RelativeLayout>	
	<RelativeLayout 
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:gravity="center"
	    >	
		<TextView
		    android:id="@+id/tv_no_allot"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="未分配"
		    android:textColor="@color/white"
		    android:textSize="14sp"
		    android:gravity="center"
		    />
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:gravity="center"
	    >	
		<TextView
		    android:id="@+id/tv_then_order"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="已预约"
		    android:textColor="@color/white"
		    android:textSize="14sp"
		    android:gravity="center"
		    />
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:gravity="center"
	    >	
		<TextView
		    android:id="@+id/tv_no_order"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="未预约"
		    android:textColor="@color/white"
		    android:textSize="14sp"
		    android:gravity="center"
		    />
		</RelativeLayout>
    </LinearLayout>  
   </com.lyp.percent.PercentRelativeLayout>  
 
   <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/percent_missionbutton"
        >
    </android.support.v4.view.ViewPager>	  
</com.lyp.percent.PercentRelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.lyp.percent.PercentRelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    >
 <com.lyp.percent.PercentRelativeLayout 
     android:id="@+id/percent_procedures"
     android:layout_width="0dp"
     android:layout_height="0dp"
     app:layout_heightPercent="10%"
	 app:layout_widthPercent="100%"
     >	 
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
		android:background="@color/bg_title"
		android:layout_centerHorizontal="true"
		android:gravity="center"
    	 >
		<TextView
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:text="操作手册"
		    android:textColor="@color/white"
		    android:gravity="center"
		    android:textSize="20sp"
		    />
		<ImageView 
		    android:id="@+id/iv_procedures_back"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:src="@drawable/returns"
		    />
    </RelativeLayout>  
   </com.lyp.percent.PercentRelativeLayout>
   
 	<com.lyp.percent.PercentRelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/percent_procedures"
	    >
	  <RelativeLayout 
		    android:id="@+id/rl_customerlogin"
		    android:layout_width="0dp"
		    android:layout_height="0dp"
		    app:layout_heightPercent="10%"
		    app:layout_widthPercent="100%"
		    app:layout_marginLeftPercent="5%"
		    app:layout_marginRightPercent="5%"
		    android:gravity="center"
	     >
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="客服端登录"
	       />  
	   <ImageView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/enter_the"
	       android:layout_alignParentRight="true"
	       />     
	  </RelativeLayout>  
	 <View 
	     android:id="@+id/view_customerlogin"
	     android:layout_width="match_parent"
	     android:layout_height="0.1sp"
	     android:background="@color/view_hui"
	     android:layout_below="@id/rl_customerlogin"
	     />
	 <RelativeLayout 
		    android:id="@+id/rl_procedures_grabsingle"
		    android:layout_width="0dp"
		    android:layout_height="0dp"
		    app:layout_heightPercent="10%"
		    app:layout_widthPercent="100%"
		    app:layout_marginLeftPercent="5%"
		    app:layout_marginRightPercent="5%"
		    android:gravity="center"
		    android:layout_below="@id/view_customerlogin"
	     >
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="抢单"
	       />  
	   <ImageView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/enter_the"
	       android:layout_alignParentRight="true"
	       />     
	  </RelativeLayout>  
	 <View 
	     android:id="@+id/view_procedures_grabsingle"
	     android:layout_width="match_parent"
	     android:layout_height="0.1sp"
	     android:background="@color/view_hui"
	     android:layout_below="@id/rl_procedures_grabsingle"
	     />
	  <RelativeLayout 
		    android:id="@+id/rl_procedures_task"
		    android:layout_width="0dp"
		    android:layout_height="0dp"
		    app:layout_heightPercent="10%"
		    app:layout_widthPercent="100%"
		    app:layout_marginLeftPercent="5%"
		    app:layout_marginRightPercent="5%"
		    android:gravity="center"
		    android:layout_below="@id/view_procedures_grabsingle"
	     >
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="任务"
	       />  
	   <ImageView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/enter_the"
	       android:layout_alignParentRight="true"
	       />     
	  </RelativeLayout>  
	 <View 
	     android:id="@+id/view_procedures_task"
	     android:layout_width="match_parent"
	     android:layout_height="0.1sp"
	     android:background="@color/view_hui"
	     android:layout_below="@id/rl_procedures_task"
	     />
	 <RelativeLayout 
		    android:id="@+id/rl_procedures_report"
		    android:layout_width="0dp"
		    android:layout_height="0dp"
		    app:layout_heightPercent="10%"
		    app:layout_widthPercent="100%"
		    app:layout_marginLeftPercent="5%"
		    app:layout_marginRightPercent="5%"
		    android:gravity="center"
		    android:layout_below="@id/view_procedures_task"
	     >
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="报告"
	       />  
	   <ImageView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/enter_the"
	       android:layout_alignParentRight="true"
	       />     
	  </RelativeLayout>  
	 <View 
	     android:id="@+id/view_procedures_report"
	     android:layout_width="match_parent"
	     android:layout_height="0.1sp"
	     android:background="@color/view_hui"
	     android:layout_below="@id/rl_procedures_report"
	     />
	  <RelativeLayout 
		    android:id="@+id/rl_procedures_my"
		    android:layout_width="0dp"
		    android:layout_height="0dp"
		    app:layout_heightPercent="10%"
		    app:layout_widthPercent="100%"
		    app:layout_marginLeftPercent="5%"
		    app:layout_marginRightPercent="5%"
		    android:gravity="center"
		    android:layout_below="@id/view_procedures_report"
	     >
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="我的"
	       />  
	   <ImageView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/enter_the"
	       android:layout_alignParentRight="true"
	       />     
	  </RelativeLayout>  
	 <View 
	     android:layout_width="match_parent"
	     android:layout_height="0.1sp"
	     android:background="@color/view_hui"
	     android:layout_below="@id/rl_procedures_my"
	     />
 </com.lyp.percent.PercentRelativeLayout>  
</com.lyp.percent.PercentRelativeLayout>
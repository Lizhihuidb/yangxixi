<?xml version="1.0" encoding="utf-8"?>
<com.lyp.percent.PercentRelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.lyp.percent.PercentRelativeLayout 
        android:id="@+id/percent_jlmy"
	    android:layout_width="0dp"
	    android:layout_height="0dp"
	    app:layout_heightPercent="40%"
	    app:layout_widthPercent="100%" 
	    android:background="@color/bg_title"
	    android:layout_centerHorizontal="true"
	    android:gravity="center"
	    >
	    
    <com.lyp.percent.PercentRelativeLayout 
        android:id="@+id/percent_jlmy_circleimageview"
	    android:layout_width="0dp"
	    android:layout_height="0dp"
	    app:layout_heightPercent="40%"
	    app:layout_widthPercent="40%" 
	    android:gravity="center"
	    android:layout_centerVertical="true"
	    android:layout_centerHorizontal="true"
	    >    
        
	 <com.tjl.yangxixi.utils.CircleImageView 
	     android:layout_width="match_parent"
	     android:layout_height="match_parent"
	     android:src="@drawable/head_portrait"
	     />
	  </com.lyp.percent.PercentRelativeLayout>
	<LinearLayout 
	    android:id="@+id/ll_jlmy_message"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/percent_jlmy_circleimageview"
	    android:orientation="vertical"
	    android:gravity="center"
	    app:layout_marginTopPercent="5%"
	    > 
	  <TextView 
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:text="张三"
	      android:textColor="@color/white"
	      android:textSize="20sp"
	      android:gravity="center"
	      />
	  <TextView 
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:text="设置个人信息"
	      android:textColor="@color/white"
	      android:textSize="14sp"
	      android:gravity="center"
	      app:layout_marginTopPercent="2%"
	      android:drawableRight="@drawable/get_into"
	      android:layout_centerHorizontal="true"
	      />
	  </LinearLayout> 
	</com.lyp.percent.PercentRelativeLayout>
	
	<com.lyp.percent.PercentRelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/percent_jlmy"
	    >
	  <RelativeLayout 
		    android:id="@+id/rl_jlmy_service_manual"
		    android:layout_width="0dp"
		    android:layout_height="0dp"
		    app:layout_heightPercent="15%"
		    app:layout_widthPercent="100%"
		    app:layout_marginLeftPercent="5%"
		    app:layout_marginRightPercent="5%"
		    android:gravity="center"
	     >
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="使用手册"
	       />  
	   <ImageView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/enter_the"
	       android:layout_alignParentRight="true"
	       />     
	  </RelativeLayout>  
	 <View 
	     android:id="@+id/view_jlmy_service_manual"
	     android:layout_width="match_parent"
	     android:layout_height="0.1sp"
	     android:background="@color/view_hui"
	     android:layout_below="@id/rl_jlmy_service_manual"
	     />   
	 <RelativeLayout 
		    android:id="@+id/rl_jlmy_use_clauses"
		    android:layout_width="0dp"
		    android:layout_height="0dp"
		    app:layout_heightPercent="15%"
		    app:layout_widthPercent="100%"
		    app:layout_marginLeftPercent="5%"
		    app:layout_marginRightPercent="5%"
		    android:gravity="center"
		    android:layout_below="@id/view_jlmy_service_manual"
	     >
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="使用条款和隐私政策"
	       />  
	   <ImageView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/enter_the"
	       android:layout_alignParentRight="true"
	       />     
	  </RelativeLayout>  
	 <View 
	     android:id="@+id/view_jlmy_use_clauses"
	     android:layout_width="match_parent"
	     android:layout_height="0.1sp"
	     android:background="@color/view_hui"
	     android:layout_below="@id/rl_jlmy_use_clauses"
	     />
	 <RelativeLayout 
		    android:id="@+id/rl_jlmy_feedback"
		    android:layout_width="0dp"
		    android:layout_height="0dp"
		    app:layout_heightPercent="15%"
		    app:layout_widthPercent="100%"
		    app:layout_marginLeftPercent="5%"
		    app:layout_marginRightPercent="5%"
		    android:gravity="center"
		    android:layout_below="@id/view_jlmy_use_clauses"
	     >
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="意见反馈"
	       />  
	   <ImageView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/enter_the"
	       android:layout_alignParentRight="true"
	       />     
	  </RelativeLayout>  
	 <View 
	     android:id="@+id/view_jlmy_feedback"
	     android:layout_width="match_parent"
	     android:layout_height="0.1sp"
	     android:background="@color/view_hui"
	     android:layout_below="@id/rl_jlmy_feedback"
	     />
	 <RelativeLayout 
		    android:id="@+id/rl_jlmy_about"
		    android:layout_width="0dp"
		    android:layout_height="0dp"
		    app:layout_heightPercent="15%"
		    app:layout_widthPercent="100%"
		    app:layout_marginLeftPercent="5%"
		    app:layout_marginRightPercent="5%"
		    android:gravity="center"
		    android:layout_below="@id/view_jlmy_feedback"
	     >
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="关于我们"
	       />  
	   <ImageView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/enter_the"
	       android:layout_alignParentRight="true"
	       />     
	  </RelativeLayout>  
	 <View 
	     android:id="@+id/view_jlmy_about"
	     android:layout_width="match_parent"
	     android:layout_height="0.1sp"
	     android:background="@color/view_hui"
	     android:layout_below="@id/rl_jlmy_about"
	     />
	  <RelativeLayout 
		    android:id="@+id/rl_jlmy_version"
		    android:layout_width="0dp"
		    android:layout_height="0dp"
		    app:layout_heightPercent="15%"
		    app:layout_widthPercent="100%"
		    app:layout_marginLeftPercent="5%"
		    app:layout_marginRightPercent="5%"
		    android:gravity="center"
		    android:layout_below="@id/view_jlmy_about"
	     >
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="当前版本1.0"
	       />  
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="检测新版本"
	       android:textColor="@color/view_hui"
	       android:layout_alignParentRight="true"
	       />     
	  </RelativeLayout>  
	 <View 
	     android:layout_width="match_parent"
	     android:layout_height="0.1sp"
	     android:background="@color/view_hui"
	     android:layout_below="@id/rl_jlmy_version"
	     />  
	</com.lyp.percent.PercentRelativeLayout>
</com.lyp.percent.PercentRelativeLayout>	
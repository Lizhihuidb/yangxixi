<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/view_bg"
	android:orientation="vertical"
	>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="8dp"
		android:background="@color/white"
		>
		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:text="姓名"
			android:gravity="center"
			/>
		<TextView
			android:id="@+id/tv_assigncar_name"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:text="徐先生"
			android:gravity="center|left"
			android:layout_weight="2"
			/>

	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="0.1sp"
		android:layout_alignParentBottom="true"
		android:background="@color/view_hui"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="8dp"
		android:background="@color/white"
		>
		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:text="电话"
			android:layout_weight="1"
			android:gravity="center"
			/>
		<TextView
			android:id="@+id/tv_assigncar_phone"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:text="138383838"
			android:gravity="center|left"
			android:layout_weight="2"
			/>

	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="0.1sp"
		android:layout_alignParentBottom="true"
		android:background="@color/view_hui"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="8dp"
		android:background="@color/white"
		>

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:text="车型"
				android:gravity="center"
				android:layout_weight="1"
				/>
			<TextView
				android:id="@+id/tv_assigncar_type"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:text="SUV"
				android:gravity="center|left"
				android:layout_weight="2"
				/>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="0.1sp"
		android:layout_alignParentBottom="true"
		android:background="@color/view_hui"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="8dp"
		android:background="@color/white"
		>

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:text="品牌"
				android:gravity="center"
				android:layout_weight="1"
				/>
			<TextView
				android:id="@+id/tv_assigncar_brand"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:text="起亚"
				android:gravity="center|left"
				android:layout_weight="2"
				/>
	</LinearLayout>
	<TextView
		android:id="@+id/view_carbrand"
		android:layout_width="match_parent"
		android:layout_height="0.1sp"
		android:layout_alignParentBottom="true"
		android:background="@color/view_hui"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="8dp"
		android:background="@color/white"
		>
			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:text="车龄"
				android:gravity="center"
				/>
			<TextView
				android:id="@+id/tv_assigncar_age"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:text="半年以上"
				android:gravity="center|left"
				android:layout_weight="2"
				/>
	</LinearLayout>
	<View
		android:id="@+id/view_age"
		android:layout_width="match_parent"
		android:layout_height="0.1sp"
		android:layout_alignParentBottom="true"
		android:background="@color/view_hui"
		/>

	<LinearLayout
		android:id="@+id/ll_number_type"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="8dp"
		android:background="@color/white"
		>

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:text="车牌"
				android:gravity="center"
				android:layout_weight="1"
				/>
			<TextView
				android:id="@+id/tv_assigncar_number"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:text="沪BBBBBB"
				android:gravity="center|left"
				android:layout_weight="2"
				/>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="0.1sp"
		android:layout_alignParentBottom="true"
		android:background="@color/view_hui"
		/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="8dp"
		android:background="@color/white"
		>
		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:text="下单日期"
			android:gravity="center"
			android:layout_weight="1"
			/>
		<TextView
			android:id="@+id/tv_assigncar_time"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:text="2017年5月20日"
			android:gravity="center|left"
			android:layout_weight="2"
			/>

	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="0.1sp"
		android:layout_alignParentBottom="true"
		android:background="@color/view_hui"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="8dp"
		android:background="@color/white"
		>
		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:text="订单号"
			android:gravity="center"
			android:layout_weight="1"
			/>
		<TextView
			android:id="@+id/tv_assigncar_ordernumber"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:text="45465421851210"
			android:gravity="center|left"
			android:layout_weight="2"
			/>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="0.1sp"
		android:layout_alignParentBottom="true"
		android:background="@color/view_hui"
		/>
	<View
		android:layout_width="match_parent"
		android:layout_height="5sp"
		android:layout_alignParentBottom="true"
		android:background="@color/view_bg"
		/>
	<View
		android:layout_width="match_parent"
		android:layout_height="0.1sp"
		android:layout_alignParentBottom="true"
		android:background="@color/view_hui"
		/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="8dp"
		android:background="@color/white"
		>
		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:text="预约"
			android:gravity="center"
			android:layout_weight="1"
			/>
		<TextView
			android:id="@+id/tv_assigncar_order"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:text="时间:2017/06/05"
			android:gravity="center|right"
			android:layout_weight="2"
			android:layout_marginRight="10dp"
			/>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="0.1sp"
		android:layout_alignParentBottom="true"
		android:background="@color/view_hui"
		/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="8dp"
		android:background="@color/white"
		>
		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:text="备注："
			android:gravity="center"
			android:layout_weight="1"
			/>
		<TextView
			android:id="@+id/tv_assigncar_remark"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:text="hehehhehehheh"
			android:gravity="center|left"
			android:layout_weight="2"
			android:layout_marginRight="10dp"
			/>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="0.1sp"
		android:layout_alignParentBottom="true"
		android:background="@color/view_hui"
		/>
</LinearLayout>
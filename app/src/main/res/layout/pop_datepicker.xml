<?xml version="1.0" encoding="utf-8"?>
<com.lyp.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	 >	
<com.lyp.percent.PercentRelativeLayout 
     android:id="@+id/percent_ordertime"
     android:layout_width="0dp"
     android:layout_height="0dp"
     app:layout_heightPercent="10%"
	 app:layout_widthPercent="100%"
     >	 
      <!-- 日历时间选择栏 -->
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="0dp"
     	android:layout_height="match_parent"
	 	app:layout_widthPercent="90%"
	 	android:layout_centerHorizontal="true"
        >
        <ImageView
             android:id="@+id/iv_left"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:background="@drawable/enter_left" 
             android:layout_centerVertical="true"
             app:layout_marginLeftPercent="10%"
             />
      	<ImageView
             android:id="@+id/iv_right"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:background="@drawable/enter_the" 
             android:layout_centerVertical="true"
             />
        <LinearLayout
             android:id="@+id/date_operator_ll"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_gravity="center_vertical"
             android:gravity="center"
             android:layout_centerInParent="true"
             android:orientation="horizontal" >
          

          <TextView
              android:id="@+id/date_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:textColor="#7ba5ff"
              android:textSize="20sp"
              android:text="" />
           <TextView
              android:id="@+id/week_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:layout_marginLeft="10dp"
              android:textColor="#93C73C"
              android:textSize="20sp"
              android:text="" />
         </LinearLayout>
    </RelativeLayout>   
 </com.lyp.percent.PercentRelativeLayout>
	
   
  <com.lyp.percent.PercentRelativeLayout 
        android:id="@+id/percent_date"
        android:layout_width="0dp"
	    android:layout_height="0dp"
	    app:layout_heightPercent="10%"
		app:layout_widthPercent="100%"
		android:layout_below="@id/percent_ordertime"
	 >
   <com.lyp.datepicker.WeekDayView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
         />         
      </com.lyp.percent.PercentRelativeLayout>
  <com.lyp.percent.PercentRelativeLayout 
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_heightPercent="50%"
		app:layout_widthPercent="100%"
		android:layout_below="@id/percent_date"
		>	         
    <com.lyp.datepicker.MonthDateView
        android:id="@+id/monthDateView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
   </com.lyp.percent.PercentRelativeLayout>
</com.lyp.percent.PercentRelativeLayout>   
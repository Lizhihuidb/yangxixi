<?xml version="1.0" encoding="utf-8"?>
<com.lyp.percent.PercentRelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
 <com.lyp.percent.PercentRelativeLayout 
     android:id="@+id/percent_grabsingle"
     android:layout_width="0dp"
     android:layout_height="0dp"
     app:layout_heightPercent="10%"
	 app:layout_widthPercent="100%"
     >	 
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
		android:background="@color/bg_title"
		android:layout_centerHorizontal="true"
		android:gravity="center"
    	 >
		<TextView
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:text="抢单"
		    android:textColor="@color/white"
		    android:gravity="center"
		    android:textSize="20sp"
		    />
		<ImageView 
		    android:id="@+id/iv_grasingle_back"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:src="@drawable/returns"
		    />
    </RelativeLayout>  
   </com.lyp.percent.PercentRelativeLayout>
   
 <ScrollView 
     android:layout_below="@id/percent_grabsingle"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="@drawable/cz_grab_a_single"
	    android:layout_below="@id/percent_grabsingle"
	    />   
</ScrollView>
    
 </com.lyp.percent.PercentRelativeLayout>  
